{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style",
        // "plugin:jsx-a11y/recommended",
        // "plugin:@next/next/recommended", seems not working as expected. see related? issue https://github.com/vercel/next.js/issues/26907
        // for reproduction, check if <input aria-labeledby="address_label"></input> would cause error.
        "next/core-web-vitals",
        "prettier"
    ],
    "plugins": ["@typescript-eslint", "testing-library", "jest"],

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "error"
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
